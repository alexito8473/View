<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimerAplicacion.SolutionActivity"
    android:background="@color/white">

    <TextView
        android:background="@color/teal_700"
        android:id="@+id/textSaludo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:text="Introduce tu nombre -> "
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editMiNombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:textColor="@color/black"
        android:id="@+id/editMiNombre"
        android:layout_width="200dp"
        android:background="#BAF4F4"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textSaludo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butPulsadorNombre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#CDE116"
        android:text="Boton"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMiNombre" />

    <TextView
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:id="@+id/textVisualizarNombre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#ECDAF3"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butPulsadorNombre" />
</androidx.constraintlayout.widget.ConstraintLayout>